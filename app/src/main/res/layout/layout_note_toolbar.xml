<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:weightSum="100"
    android:gravity="center_vertical"
    tools:ignore="ContentDescription"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/back_arrow_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/toolbar_back_arrow"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_back_arrow"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_mark_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/toolbar_check_mark"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_check_mark"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/toolbar_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:layout_marginStart="@dimen/dp_10"
        android:text="Some text"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/toolbar_note_edit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        android:background="@color/white"
        android:padding="@dimen/dp_5"
        android:visibility="gone"/>
</LinearLayout>